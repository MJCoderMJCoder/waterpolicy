<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12dp" >

    <RelativeLayout
        android:id="@+id/topTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/loginBG" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/notice"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:onClick="back"
            android:padding="10dp"
            android:src="@drawable/back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/noticeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topTitle"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/notice"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/releaseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/noticeTitle"
        android:layout_marginTop="25dp"
        android:paddingRight="10dp"
        android:text="@string/date"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/releaseTimeHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/releaseTime"
        android:layout_toLeftOf="@+id/releaseTime"
        android:text="@string/releaseDate"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/noticeSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/releaseTime"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:text="@string/noticeType"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/noticeSubjectClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/releaseTime"
        android:layout_toLeftOf="@+id/releaseTimeHint"
        android:layout_toRightOf="@+id/noticeSubject"
        android:singleLine="true"
        android:text="@string/phoneNotice"
        android:textSize="15sp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/noticeSubjectClass"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/noticeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/notice"
        android:textSize="18sp" />

</RelativeLayout>