<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/topTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/loginBG" >

        <TextView
            android:id="@+id/topTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/chargeSheet"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:onClick="back"
            android:padding="10dp"
            android:src="@drawable/back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/timeHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/topTitle"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/time"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/timeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/timeHint"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/timeHint"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/siteHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/timeHint"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/site"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/siteValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/siteHint"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/siteHint"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/typeHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/siteValue"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/caseClass"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/typeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/typeHint"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/typeHint"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/desHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/typeHint"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/brief"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/desValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/desHint"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/desHint"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/reportHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/desValue"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/reportPersonName"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/reportValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/reportHint"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/reportHint"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/reportValue"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="点击查看图片"
        android:textColor="@color/link"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/photo"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/photo"
        android:text="点击播放视频"
        android:textColor="@color/link"
        android:textSize="20sp" />

</RelativeLayout>